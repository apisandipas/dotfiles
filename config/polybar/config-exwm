[module/exwm-workspace]
	type = custom/ipc
  hook-0 = emacsclient -e "(bp/polybar-exwm-workspace)" | sed -e 's/^"//' -e 's/"$//'
	initial = 1
	format-underline = ${colors.fg}
	format-padding = 1
